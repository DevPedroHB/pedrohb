{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"//#format-and-lint": {},
		"//#format-and-lint:fix": {
			"cache": false
		},
		"barrels:generate": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build", "^barrels:generate", "^db:generate"],
			"env": ["DATABASE_URL"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"db:deploy": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"dev": {
			"cache": false,
			"dependsOn": ["^barrels:generate", "^db:generate"],
			"persistent": true
		}
	},
	"ui": "tui"
}
